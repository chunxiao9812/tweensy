package com.flashdynamix.motion.extras {	import flash.display.DisplayObject;		/**	 * @author FlashDynamix	 */	public class SimpleTransform {		public var x : Number;		public var y : Number;		public var scaleX : Number;		public var scaleY : Number;		public var instance : DisplayObject;		private var changeX : Number;		private var changeY : Number;		private var changeScaleX : Number;		private var changeScaleY : Number;		private var _position : Number = 0;		private var inited : Boolean = false;		public function SimpleTransform(instance : DisplayObject, x : Number, y : Number, scaleX : Number, scaleY : Number) {			this.instance = instance;						this.x = x;			this.y = y;			this.scaleX = scaleX;			this.scaleY = scaleY;		}		public function set position(index : Number) : void {			_position = index;						var q : Number = 1 - index;						if(!inited) {				changeX = x - instance.x;				changeY = y - instance.y;				changeScaleX = scaleX - instance.scaleX;				changeScaleY = scaleY - instance.scaleY;				inited = true;			}						instance.x = x - (changeX * q);			instance.y = y - (changeY * q);			instance.scaleX = scaleX - (changeScaleX * q);			instance.scaleY = scaleY - (changeScaleY * q);		}		public function get position() : Number {			return _position;		}	}}